---
import PlotFigure from "../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
import data from "../assets/data.json";
import presidents from "../assets/presidents.json";
---

<html lang="en">
  <body>
    <main>
        <section id="penguins-graph" class="max-w-3xl mx-auto mb-12">
          <h2
            class="text-2xl font-bold mb-4 text-purple-900 text-center border-b-2 border-blue-200 pb-2 uppercase"
          >
            Penguins
          </h2>
          <div
            class="bg-white rounded-xl shadow-lg p-6 flex flex-col items-center border border-gray-100"
          >
            <div class="w-full flex justify-center overflow-x-auto">
              <PlotFigure
                options={{
                  marks: [
                    Plot.dot(penguins, {
                      x: "culmen_length_mm",
                      y: "culmen_depth_mm",
                    }),
                  ],
                }}
              />
            </div>
          </div>
        </section>

        
    </main>
  </body>
</html>
